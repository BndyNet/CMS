<!DOCTYPE html>
<html ng-app="app" ng-controller="RootCtrl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Panel - @Global.AppTitle</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/css/base")
    @Styles.Render("~/p/css/common")
    @Styles.Render("~/p/css/admin")
    <!--[if lt IE 9]>
        @Scripts.Render("~/js/ie8")
    <![endif]-->
    @RenderSection("Styles", false)
</head>
<body class="hold-transition skin-blue-light sidebar-mini">
    @RenderBody()
    @Scripts.Render("~/js/base")
    @Scripts.Render("~/p/js/common")
    @Scripts.Render("~/p/js/angular")
    @Scripts.Render("~/p/js/admin")
    @RenderSection("Scripts", false)
</body>
</html>
